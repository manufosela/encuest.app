      <div class="dialog-content">
        <div class="dialog-icon" id="error-dialog-icon">锔</div>
        <h2 id="dialog-title">Error</h2>
        <p id="dialog-message">Ha ocurrido un error</p>
        <button id="dialog-close" class="btn-dialog">Entendido</button>
      </div>
    </dialog>
    
