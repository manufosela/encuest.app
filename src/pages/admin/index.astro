---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Admin - Encuestapp">
  <div class="admin-container">
    <div class="header">
      <h2>Gesti√≥n de Encuestas</h2>
      <button id="new-survey-btn" class="btn-primary">Nueva Encuesta</button>
    </div>
    
    <div id="surveys-list" class="surveys-grid">
      <!-- Surveys will be loaded here -->
    </div>
    
    <!-- Modal for new survey -->
    <div id="survey-modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Nueva Encuesta</h3>
          <button class="close-btn">&times;</button>
        </div>
        <form id="survey-form">
          <div class="form-group">
            <label for="survey-type">Tipo:</label>
            <select id="survey-type" required>
              <option value="survey">üìä Encuesta</option>
              <option value="contest">üèÜ Concurso</option>
            </select>
          </div>
          <div class="form-group">
            <label for="survey-name">Nombre del evento:</label>
            <input type="text" id="survey-name" required />
          </div>
          <div class="form-group">
            <label for="survey-description">Descripci√≥n:</label>
            <textarea id="survey-description" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label class="checkbox-label">
              <input type="checkbox" id="allow-change-answer" />
              <span class="checkmark"></span>
              Permitir a los usuarios cambiar su respuesta
            </label>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn-secondary close-btn">Cancelar</button>
            <button type="submit" class="btn-primary">Crear Encuesta</button>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Modal for questions -->
    <div id="questions-modal" class="modal">
      <div class="modal-content modal-large">
        <div class="modal-header">
          <h3 id="survey-title">Preguntas</h3>
          <button class="close-btn">&times;</button>
        </div>
        <div class="questions-container">
          <button id="add-question-btn" class="btn-primary">A√±adir Pregunta</button>
          <div id="questions-list">
            <!-- Questions will be loaded here -->
          </div>
        </div>
      </div>
    </div>
    
    <!-- Modal for new question -->
    <div id="question-form-modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Nueva Pregunta</h3>
          <button class="close-btn">&times;</button>
        </div>
        <form id="question-form">
          <div class="form-group">
            <label for="question-text">Pregunta:</label>
            <input type="text" id="question-text" required />
          </div>
          <div class="form-group">
            <label>Opciones:</label>
            <div id="options-container">
              <div class="option-row">
                <input type="text" class="option-input" placeholder="Opci√≥n 1" required />
                <label class="checkbox-label contest-only" style="display:none;">
                  <input type="checkbox" class="correct-answer" data-index="0" />
                  <span class="checkmark"></span>
                  Correcta
                </label>
              </div>
              <div class="option-row">
                <input type="text" class="option-input" placeholder="Opci√≥n 2" required />
                <label class="checkbox-label contest-only" style="display:none;">
                  <input type="checkbox" class="correct-answer" data-index="1" />
                  <span class="checkmark"></span>
                  Correcta
                </label>
              </div>
            </div>
            <button type="button" id="add-option-btn" class="btn-secondary">A√±adir Opci√≥n</button>
          </div>
          <div class="form-group contest-only" style="display:none;">
            <label for="time-limit">Tiempo l√≠mite (segundos):</label>
            <input type="number" id="time-limit" min="5" max="300" value="30" />
          </div>
          <div class="form-group contest-only" style="display:none;">
            <label for="question-points">Puntos base:</label>
            <input type="number" id="question-points" min="10" max="1000" value="100" />
          </div>
          <div class="modal-footer">
            <button type="button" class="btn-secondary close-btn">Cancelar</button>
            <button type="submit" class="btn-primary">Guardar Pregunta</button>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Error Dialog -->
    <dialog id="error-dialog" class="error-dialog">
      <div class="dialog-content">
        <div class="dialog-icon" id="error-dialog-icon">‚ö†Ô∏è</div>
        <h2 id="dialog-title">Error</h2>
        <p id="dialog-message">Ha ocurrido un error</p>
        <button id="dialog-close" class="btn-dialog">Entendido</button>
      </div>
    </dialog>
    
    <!-- Confirmation Dialog -->
    <dialog id="confirm-dialog" class="error-dialog">
      <div class="dialog-content">
        <div class="dialog-icon">‚ö†Ô∏è</div>
        <h2 id="confirm-title">Confirmar acci√≥n</h2>
        <p id="confirm-message">¬øEst√°s seguro?</p>
        <div class="confirm-actions">
          <button id="confirm-cancel" class="btn-secondary">Cancelar</button>
          <button id="confirm-accept" class="btn-danger">Confirmar</button>
        </div>
      </div>
    </dialog>
  </div>
</AdminLayout>

<script type="module">
  import {
    createSurvey,
    getAllSurveys,
    deleteSurvey,
    addQuestion,
    deleteQuestion,
    getSurvey
  } from '/lib/database.js';
  
  let currentSurveyId = null;
  
  // Error dialog functions
  function showErrorDialog(title, message) {
    document.getElementById('dialog-title').textContent = title;
    document.getElementById('dialog-message').textContent = message;
    document.getElementById('error-dialog').showModal();
  }
  
  // Confirmation dialog functions
  function showConfirmDialog(title, message) {
    return new Promise((resolve) => {
      document.getElementById('confirm-title').textContent = title;
      document.getElementById('confirm-message').textContent = message;
      document.getElementById('confirm-dialog').showModal();
      
      const handleCancel = () => {
        document.getElementById('confirm-dialog').close();
        resolve(false);
        cleanup();
      };
      
      const handleAccept = () => {
        document.getElementById('confirm-dialog').close();
        resolve(true);
        cleanup();
      };
      
      const cleanup = () => {
        document.getElementById('confirm-cancel').removeEventListener('click', handleCancel);
        document.getElementById('confirm-accept').removeEventListener('click', handleAccept);
      };
      
      document.getElementById('confirm-cancel').addEventListener('click', handleCancel);
      document.getElementById('confirm-accept').addEventListener('click', handleAccept);
    });
  }
  
  // Dialog close handler
  document.getElementById('dialog-close').addEventListener('click', () => {
    document.getElementById('error-dialog').close();
  });
  
  // Close on backdrop click
  document.getElementById('error-dialog').addEventListener('click', (e) => {
    if (e.target.id === 'error-dialog') {
      document.getElementById('error-dialog').close();
    }
  });
  
  // Close confirm dialog on backdrop click
  document.getElementById('confirm-dialog').addEventListener('click', (e) => {
    if (e.target.id === 'confirm-dialog') {
      document.getElementById('confirm-dialog').close();
    }
  });
  
  // Load surveys
  async function loadSurveys() {
    const surveys = await getAllSurveys();
    const surveysList = document.getElementById('surveys-list');
    
    if (Object.keys(surveys).length === 0) {
      surveysList.innerHTML = '<p class="no-data">No hay encuestas creadas</p>';
      return;
    }
    
    surveysList.innerHTML = Object.entries(surveys).map(([id, survey]) => `
      <div class="survey-card">
        <h3>${survey.name}</h3>
        <p>${survey.description || 'Sin descripci√≥n'}</p>
        <div class="survey-code">
          <span class="code-label">C√≥digo:</span>
          <span class="code-value">${survey.code || 'N/A'}</span>
        </div>
        <div class="survey-actions">
          <button onclick="viewQuestions('${id}')" class="btn-secondary">Preguntas</button>
          <button onclick="goToQR('${id}')" class="btn-secondary">üì± QR</button>
          <button onclick="goToControl('${id}')" class="btn-primary">Control</button>
          <button onclick="deleteSurveyHandler('${id}')" class="btn-danger">Eliminar</button>
        </div>
      </div>
    `).join('');
  }
  
  // View questions function is defined later with contest support
  
  // Go to control
  window.goToControl = (surveyId) => {
    window.location.href = `/admin/control?survey=${surveyId}`;
  };
  
  // Go to QR page
  window.goToQR = (surveyId) => {
    window.open(`/qr?id=${surveyId}`, '_blank');
  };
  
  // Delete survey
  window.deleteSurveyHandler = async (surveyId) => {
    const confirmed = await showConfirmDialog(
      'Eliminar Encuesta',
      '¬øEst√°s seguro de eliminar esta encuesta? Esta acci√≥n no se puede deshacer.'
    );
    
    if (confirmed) {
      await deleteSurvey(surveyId);
      loadSurveys();
    }
  };
  
  // Delete question
  window.deleteQuestionHandler = async (questionId) => {
    const confirmed = await showConfirmDialog(
      'Eliminar Pregunta',
      '¬øEst√°s seguro de eliminar esta pregunta? Esta acci√≥n no se puede deshacer.'
    );
    
    if (confirmed) {
      await deleteQuestion(currentSurveyId, questionId);
      viewQuestions(currentSurveyId);
    }
  };
  
  // Modal handlers
  document.getElementById('new-survey-btn').addEventListener('click', () => {
    document.getElementById('survey-modal').classList.add('active');
  });

  // Survey type change handler
  document.getElementById('survey-type').addEventListener('change', (e) => {
    const isContest = e.target.value === 'contest';
    document.getElementById('allow-change-answer').closest('.form-group').style.display = isContest ? 'none' : 'block';
  });

  // Contest question type handler
  let isCurrentSurveyContest = false;

  // Store survey type when opening questions modal
  window.viewQuestions = async function(surveyId) {
    const survey = await getSurvey(surveyId);
    isCurrentSurveyContest = survey.type === 'contest';

    // Show/hide contest fields in question modal
    const contestFields = document.querySelectorAll('.contest-only');
    contestFields.forEach(field => {
      field.style.display = isCurrentSurveyContest ? 'block' : 'none';
    });

    // Continue with original logic
    currentSurveyId = surveyId;
    document.getElementById('survey-title').textContent = `Preguntas - ${survey.name}`;

    if (survey.questions) {
      const questionsHtml = Object.entries(survey.questions).map(([id, question]) => `
        <div class="question-item">
          <h4>${question.text}</h4>
          <ul>
            ${question.options.map((opt, i) => {
              const isCorrect = isCurrentSurveyContest && question.correctAnswers?.includes(i);
              return `<li${isCorrect ? ' class="correct-option"' : ''}>${opt}${isCorrect ? ' ‚úì' : ''}</li>`;
            }).join('')}
          </ul>
          ${isCurrentSurveyContest && question.timeLimit ? `<p><strong>Tiempo: ${question.timeLimit}s | Puntos: ${question.points}</strong></p>` : ''}
          <button onclick="deleteQuestionConfirm('${id}')" class="btn-danger">Eliminar</button>
        </div>
      `).join('');
      document.getElementById('questions-list').innerHTML = questionsHtml;
    } else {
      document.getElementById('questions-list').innerHTML = '<p>No hay preguntas a√∫n.</p>';
    }

    document.getElementById('questions-modal').classList.add('active');
  };
  
  document.getElementById('add-question-btn').addEventListener('click', () => {
    document.getElementById('question-form-modal').classList.add('active');
  });
  
  document.querySelectorAll('.close-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.target.closest('.modal').classList.remove('active');
    });
  });
  
  // Add option button
  document.getElementById('add-option-btn').addEventListener('click', () => {
    const container = document.getElementById('options-container');
    const optionCount = container.querySelectorAll('.option-input').length;

    const optionRow = document.createElement('div');
    optionRow.className = 'option-row';

    const input = document.createElement('input');
    input.type = 'text';
    input.className = 'option-input';
    input.placeholder = `Opci√≥n ${optionCount + 1}`;
    input.required = true;

    const correctLabel = document.createElement('label');
    correctLabel.className = 'checkbox-label contest-only';
    correctLabel.style.display = isCurrentSurveyContest ? 'block' : 'none';

    const correctCheckbox = document.createElement('input');
    correctCheckbox.type = 'checkbox';
    correctCheckbox.className = 'correct-answer';
    correctCheckbox.setAttribute('data-index', optionCount);

    const checkmark = document.createElement('span');
    checkmark.className = 'checkmark';

    correctLabel.appendChild(correctCheckbox);
    correctLabel.appendChild(checkmark);
    correctLabel.appendChild(document.createTextNode(' Correcta'));

    optionRow.appendChild(input);
    optionRow.appendChild(correctLabel);
    container.appendChild(optionRow);
  });
  
  // Survey form
  document.getElementById('survey-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    const type = document.getElementById('survey-type').value;
    const name = document.getElementById('survey-name').value;
    const description = document.getElementById('survey-description').value;
    const allowChangeAnswer = document.getElementById('allow-change-answer').checked;

    try {
      await createSurvey({ type, name, description, allowChangeAnswer });
      document.getElementById('survey-modal').classList.remove('active');
      e.target.reset();
      loadSurveys();
    } catch (error) {
      console.error('Error creating survey:', error);
      showErrorDialog('Error al Crear Encuesta', 'Error al crear la encuesta. Verifica que est√©s autenticado correctamente.');
    }
  });
  
  // Question form
  document.getElementById('question-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    const text = document.getElementById('question-text').value;
    const options = Array.from(document.querySelectorAll('.option-input'))
      .map(input => input.value)
      .filter(val => val.trim());

    if (options.length < 2) {
      showErrorDialog('Opciones Insuficientes', 'Debe haber al menos 2 opciones para crear la pregunta.');
      return;
    }

    let questionData = { text, options };

    try {
      // Add contest-specific fields if applicable
      if (isCurrentSurveyContest) {
        const correctAnswers = Array.from(document.querySelectorAll('.correct-answer:checked'))
          .map(checkbox => parseInt(checkbox.getAttribute('data-index')));

        if (correctAnswers.length === 0) {
          showErrorDialog('Respuesta Correcta Requerida', 'Debes marcar al menos una respuesta correcta para concursos.');
          return;
        }

        questionData.correctAnswers = correctAnswers;
        questionData.timeLimit = parseInt(document.getElementById('time-limit').value) || 30;
        questionData.points = parseInt(document.getElementById('question-points').value) || 100;

        // Use contest question function (temporarily using regular addQuestion)
        await addQuestion(currentSurveyId, questionData);
      } else {
        // Use regular question function
        await addQuestion(currentSurveyId, questionData);
      }

      document.getElementById('question-form-modal').classList.remove('active');
      e.target.reset();

      // Reset options to default 2
      const container = document.getElementById('options-container');
      container.innerHTML = `
        <div class="option-row">
          <input type="text" class="option-input" placeholder="Opci√≥n 1" required />
          <label class="checkbox-label contest-only" style="display:${isCurrentSurveyContest ? 'block' : 'none'};">
            <input type="checkbox" class="correct-answer" data-index="0" />
            <span class="checkmark"></span>
            Correcta
          </label>
        </div>
        <div class="option-row">
          <input type="text" class="option-input" placeholder="Opci√≥n 2" required />
          <label class="checkbox-label contest-only" style="display:${isCurrentSurveyContest ? 'block' : 'none'};">
            <input type="checkbox" class="correct-answer" data-index="1" />
            <span class="checkmark"></span>
            Correcta
          </label>
        </div>
      `;

      viewQuestions(currentSurveyId);
    } catch (error) {
      console.error('Error creating question:', error);
      showErrorDialog('Error', 'Error al crear la pregunta: ' + error.message);
    }
  });
  
  // Load surveys on page load
  loadSurveys();
</script>

<style is:global>
